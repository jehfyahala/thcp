@model thcp.Models.Position

@{
    ViewData["Title"] = "Detalles de puestos";
}

<h2>Detalles de puestos de trabajo</h2>

<div>
    <h4>Posición y departamento asociado</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department.DepartmentName)
        </dt>
        <dd class="col-sm-10">

            @Html.DisplayFor(model => model.Department.DepartmentName)
            <select asp-for="DepartmetId" class="form-control" asp-items="ViewBag.DepartmetId" disabled></select>
        </dd>
    </dl>

</div>
<div>
    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model.PositionId">Editar</a> 
    <a asp-action="Index" class="btn btn-success">Regresar</a>
</div>
