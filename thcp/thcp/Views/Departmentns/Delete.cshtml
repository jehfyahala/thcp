}

<h1>Borrar</h1>
<h3>¿Esta seguro de eliminar este registro?</h3>
<div>
    <h4>Departamentos</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartmentName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartmentName)
        </dd>
    </dl>
</div>

